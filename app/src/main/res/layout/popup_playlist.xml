<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlist_popup"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/playlist_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/playlist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Create New"
        />
    <TextView
        android:id="@+id/playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/playlist_title"
        app:layout_constraintStart_toStartOf="@id/playlist_title"
        android:text="Playlist Name:"/>

    <EditText
        android:id="@+id/playlist_name_edit_text"
        android:layout_width="200dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/playlist_name"
        app:layout_constraintTop_toTopOf="@id/playlist_name"
        app:layout_constraintBottom_toBottomOf="@id/playlist_name"
        />

    <Button
        android:id="@+id/create_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#ED767676"
        android:text="Create"/>
    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf=""
        android:backgroundTint="#ADC81717"
        android:text="Cancel"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>