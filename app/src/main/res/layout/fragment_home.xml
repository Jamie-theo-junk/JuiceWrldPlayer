<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">


    <TextView
        android:id="@+id/album_txt"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Albums"/>
    <LinearLayout
        android:id="@+id/albums_linear"
        android:layout_below="@+id/album_txt"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/latest_album_cardview"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/latest_album"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/show_more_album_cardview"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/show_more_album"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/most_played_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text="Most PLayed"
        android:layout_below="@id/albums_linear"
        android:layout_marginLeft="30dp"
        />




</RelativeLayout>