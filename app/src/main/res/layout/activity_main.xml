<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/current_song_card"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="6dp"
        android:layout_above="@id/bottom_nav"
        app:cardElevation="0dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/grey"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/song_background_card_view"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp">
                <ImageView
                    android:id="@+id/song_background_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/song_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Song Name"
                android:layout_toRightOf="@id/song_background_card_view"
                android:layout_toLeftOf="@id/time_stamp_txt"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/time_stamp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/max_time_stamp_txt"

                />
            <TextView
                android:id="@+id/max_time_stamp_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/03:21"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/play_image"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/play_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/pause_background"
                android:layout_toLeftOf="@id/skip_next_image_button"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/skip_next_image_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/skip_next"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/list_rel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/image_list"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dynamic_feed"/>
            <TextView
                android:id="@+id/text_list"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/image_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="List"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/home_rel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/image_home"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/view_home"/>
            <TextView
                android:id="@+id/text_home"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/image_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Home"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/playlist_rel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/image_playlist"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/view_agenda"/>
            <TextView
                android:id="@+id/text_playlist"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/image_playlist"
                android:layout_height="wrap_content"
                android:text="Playlist"
                android:textColor="@color/black"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>